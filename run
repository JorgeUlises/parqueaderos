#!/bin/bash
RED='\033[0;31m'
NC='\033[0m' # No Color

if [ "$1" == 'h' ]
then
 echo -e ${RED}vagrant halt${NC}
 vagrant halt
elif [ "$1" == 'r' ]
then
 echo -e ${RED}vagrant reload${NC}
 vagrant reload
 echo -e ${RED}vagrant ssh${NC}
 vagrant ssh
else
 echo -e ${RED}vagrant up${NC}
 vagrant up
 echo -e ${RED}vagrant ssh${NC}
 vagrant ssh
fi

